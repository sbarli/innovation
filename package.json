{
  "name": "@sbarli/innovation",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:backend": "turbo run @inno/backend#build",
    "clean:all": "turbo clean && ./scripts/recurseDeleteNodeModules.sh && yarn cache clean",
    "clean:td": "turbo daemon clean",
    "tb:start": "turbo daemon start",
    "dev": "turbo run dev",
    "dev:backend": "turbo run @inno/backend#dev",
    "dev:native": "turbo run @inno/native#dev",
    "exp": "yarn workspace @inno/native exp",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:eslint": "turbo run lint:eslint",
    "lint:fix": "turbo run lint:fix",
    "lint:staged": "lint-staged",
    "postinstall": "npx patch-package",
    "test": "turbo run test",
    "codegen": "graphql-codegen --config codegen.yml && turbo run @inno/gql#build"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --quiet --fix"
    ]
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-apollo": "^4.1.0",
    "@inno/eslint-custom": "*",
    "@parcel/watcher": "^2.3.0",
    "@types/lint-staged": "~13.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "turbo": "2.5.0"
  },
  "engines": {
    "node": "22.14.0"
  },
  "packageManager": "yarn@4.9.0"
}
